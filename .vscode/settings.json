{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true
  },
  "search.exclude": {
    ".nuxt": true,
    ".output": true,
    ".unlighthouse": true
  }
}
